def load_image(path):
    img = Image.open(path).convert('RGB')
    transform = transforms.Compose([
        transforms.Resize((224, 224)),
        transforms.ToTensor()
    ])
    return transform(img).unsqueeze(0)

image_path = "caminho/para/sua/imagem.jpg"  # insira o caminho da sua imagem
image = load_image(image_path)
image_np = image.numpy()[0].transpose(1, 2, 0)  # Convertendo para NumPy para plotar
